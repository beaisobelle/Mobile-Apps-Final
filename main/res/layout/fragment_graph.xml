<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/city2"
    tools:context=".GraphFragment">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="35sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="Reported Cases"></TextView>

            <com.github.mikephil.charting.charts.PieChart
                android:id="@+id/piechart"
                android:layout_width="match_parent"
                android:layout_height="600dp"></com.github.mikephil.charting.charts.PieChart>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="35sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="Current Timeline"></TextView>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/historychart"
                android:layout_width="match_parent"
                android:layout_marginBottom="100dp"
                android:layout_height="600dp"></com.github.mikephil.charting.charts.LineChart>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="35sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="Predicted Timeline"></TextView>

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/predictionchart"
                android:layout_width="match_parent"
                android:layout_marginBottom="100dp"
                android:layout_height="600dp"></com.github.mikephil.charting.charts.LineChart>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="35sp"
                android:textColor="#FFFFFF"
                android:textStyle="bold"
                android:text="Recoveries vs Deaths"></TextView>

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barchart"
                android:layout_width="match_parent"
                android:layout_height="600dp"></com.github.mikephil.charting.charts.BarChart>

        </LinearLayout>
    </ScrollView>



</FrameLayout>



